<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

    <!--设置Session默认的实效时间-->
    <session-config>
        <!--设置Session自动失效，以分钟为单位-->
        <session-timeout>1</session-timeout>
    </session-config>

    <servlet>
        <servlet-name>Cookie01</servlet-name>
        <servlet-class>com.harry.servlet.Demo01_Cookie</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cookie01</servlet-name>
        <url-pattern>/Cookie01</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Cookie02</servlet-name>
        <servlet-class>com.harry.servlet.Demo02_DeleteCookie</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cookie02</servlet-name>
        <url-pattern>/DelCookie</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Cookie03</servlet-name>
        <servlet-class>com.harry.servlet.Demo03_CookieEncoding</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cookie03</servlet-name>
        <url-pattern>/CookieEncoding</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Session01</servlet-name>
        <servlet-class>com.harry.servlet.Demo04_Session</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Session01</servlet-name>
        <url-pattern>/Session01</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Session02</servlet-name>
        <servlet-class>com.harry.servlet.Demo05_GetName</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Session02</servlet-name>
        <url-pattern>/Session02</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Session03</servlet-name>
        <servlet-class>com.harry.servlet.Demo06_DelSession</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Session03</servlet-name>
        <url-pattern>/Session03</url-pattern>
    </servlet-mapping>
</web-app>